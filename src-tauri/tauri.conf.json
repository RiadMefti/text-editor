{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"

  },
  "package": {
    "productName": "text-editor",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "scope": ["**", "**/*", "/**/*"]
      },
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.Riad-Text-Editor.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png", 
        "icons/310x310.png"
     
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "text-editor",
        "width": 800,
        "height": 600
      }
    ]
  }
}
